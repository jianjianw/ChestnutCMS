			<dependency>
				<groupId>com.chestnut</groupId>
				<artifactId>chestnut-system</artifactId>
				<version>${chestnut.version}</version>
			</dependency>

			<!-- 元数据模块 -->
			<dependency>
				<groupId>com.chestnut</groupId>
				<artifactId>chestnut-meta</artifactId>
				<version>${chestnut.version}</version>
			</dependency>
			
			<!-- 词汇基础模块 -->
			<dependency>
				<groupId>com.chestnut</groupId>
				<artifactId>chestnut-word</artifactId>
