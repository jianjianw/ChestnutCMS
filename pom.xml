			<dependency>
				<groupId>com.chestnut</groupId>
				<artifactId>chestnut-cms-block</artifactId>
				<version>${chestnut.version}</version>
			</dependency>

			<!-- 扩展模型 -->
			<dependency>
				<groupId>com.chestnut</groupId>
				<artifactId>chestnut-cms-exmodel</artifactId>
				<version>${chestnut.version}</version>
			</dependency>

