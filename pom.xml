			</dependency>

			<!-- 存储 -->
			<dependency>
				<groupId>com.chestnut</groupId>
				<artifactId>chestnut-common-storage</artifactId>
				<version>${chestnut.version}</version>
			</dependency>

			<!-- 瞎扩展 -->
			<dependency>
				<groupId>com.chestnut</groupId>
				<artifactId>chestnut-common-extend</artifactId>
				<version>${chestnut.version}</version>
			</dependency>

			<!-- 代码生成 -->
			<dependency>
				<groupId>com.chestnut</groupId>
				<artifactId>chestnut-generator</artifactId>
				<version>${chestnut.version}</version>
			</dependency>

