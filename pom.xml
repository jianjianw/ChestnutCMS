			</dependency>

			<!-- 数据统计模块 -->
			<dependency>
				<groupId>com.chestnut</groupId>
				<artifactId>chestnut-stat</artifactId>
				<version>${chestnut.version}</version>
			</dependency>

			<!-- 搜索模块 -->
			<dependency>
				<groupId>com.chestnut</groupId>
				<artifactId>chestnut-search</artifactId>
				<version>${chestnut.version}</version>
			</dependency>

			<!-- 会员模块 -->
			<dependency>
				<groupId>com.chestnut</groupId>
				<artifactId>chestnut-member</artifactId>
