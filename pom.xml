			<dependency>
				<groupId>com.chestnut</groupId>
				<artifactId>chestnut-cms-search</artifactId>
				<version>${chestnut.version}</version>
			</dependency>
			
			<!-- CMS评论模块 -->
			<dependency>
				<groupId>com.chestnut</groupId>
				<artifactId>chestnut-cms-comment</artifactId>
				<version>${chestnut.version}</version>
			</dependency>
			
			<!-- CMS投票调查模块 -->
			<dependency>
				<groupId>com.chestnut</groupId>
				<artifactId>chestnut-cms-vote</artifactId>
				<version>${chestnut.version}</version>
